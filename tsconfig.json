{
  "compilerOptions": {
    "declaration": true,
    "target": "ES5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowUmdGlobalAccess": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
